<section id="viewComments">
    <div class="post">
        <div class="col thumbnail">
            <a href="{{post.url}}">
                <img src="{{post.imageUrl}}">
            </a>
        </div>
        <div class="post-content">
            <div class="title">
                <a href="{{post.url}}">
                    {{post.title}}
                </a>
            </div>
            <div class="details">
                <p>{{post.description}}</p>
                <div class="info">
                    submitted {{post.time}} days ago by {{post.author}}
                </div>
                <div class="controls">
                    <ul>
                        <li class="action"><a class="editLink" href="#/edit/:{{post._id}}">edit</a></li>
                        <li class="action"><a class="deleteLink" href="#/delete/:{{post._id}}">delete</a></li>
                    </ul>
                </div>

            </div>
        </div>
        <div class="clear"></div>
    </div>
    <div class="post post-content">
        <form id="commentForm" method="post" action="#/comment/:{{post._id}}">
            <label>Comment</label>
            <textarea name="content" type="text"></textarea>
            <input type="submit" value="Add Comment" id="btnPostComment">
        </form>
    </div>
    {{#each comments}}
        <article class="post post-content">
            <p>{{content}}</p>
            <div class="info">
                submitted {{time}} ago by {{author}} {{#if isAuthor }}| <a href="#/comment/delete/:{{_id}}/post/:{{postId}}" class="deleteLink">delete</a>{{/if}}
                <!--submitted {{time}} ago by {{author}} {{#if isAuthor }}| <a href="#" class="deleteLink" data-comment-id="{{_id}}">delete</a>{{/if}}-->
            </div>
        </article>
        {{else}}
    <article class="post post-content">
        <p> No comments yet.</p>
    </article>
    {{/each}}
</section>
