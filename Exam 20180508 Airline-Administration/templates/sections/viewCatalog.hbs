<section id="viewCatalog" class="background-img">
    {{#if user}}
    <a href="#/addFlight" class="add-flight">Add Flight +</a>
    {{/if}}
    <div class="added-flights">
        {{#each flights}}
            <a href="#/details/:{{_id}}" class="added-flight">
                <img src="{{imgUrl}}" alt="" class="picture-added-flight">
                <h3>{{destination}}</h3>
                <span>from {{origin}}</span><span>{{date}}</span>
            </a>
        {{/each}}
    </div>
</section>